{% extends 'base.html.twig' %}

{% block title %}Hello AppointmentController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('appointment') }}
{% endblock %}

{% block body %}
    <div class="w-full px-4">
        <div class="p-4 text-gray-900 bg-white rounded-lg shadow-lg text-center flex">
            <div id="calendar" class="w-2/3"></div>
            <aside class="w-1/3 pl-4">
                <div id="appointment-display-block" class="mb-4">
                    <h3 class="mb-2">Votre rendez vous : </h3>
                    <p id="appointment-display" class="mb-4"></p>
                    {{ form_start(appointmentForm) }}
                    {{ form_errors(appointmentForm) }}
                    <button type="submit">{{ 'submit'|trans }}</button>
                    {{ form_end(appointmentForm) }}
                    <hr class="mt-4">
                </div>
                <div>
                    <h3>Vos rendez-vous Ã  venir : </h3>
                    <ul>
                        {% for event in futureEvents %}
                            <li data-id="{{ event.id }}">{{ event.start|date }} - {{ event.end|date }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </aside>
        </div>

    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        const calendarId = {{ calendar.id }};
    </script>

    {{ encore_entry_script_tags('appointment') }}
{% endblock %}
