{% extends 'layout/full.html.twig' %}

{% block title %}{{ 'reset_password'|trans }}{% endblock %}

{% block content %}
    <h1 class="font-medium self-center text-xl sm:text-2xl text-gray-800 mb-6">{{ 'reset_password'|trans }}</h1>

    {{ form_start(requestForm) }}

    <div class="flex flex-col mb-4">
        {{ form_label(requestForm.email, 'email') }}
        {{ form_widget(requestForm.email, {'attr': {'placeholder': 'email'}}) }}
        {{ form_errors(requestForm.email) }}
    </div>
    <div class="mb-4">
        <small>
            {{ 'reset_password_description'|trans }}
        </small>
    </div>
    <div class="flex w-full">
        <button type="submit"
                class="flex items-center justify-center w-full">
            <span class="mr-2">{{ 'submit'|trans }}</span>
        </button>
    </div>
    {{ form_end(requestForm) }}
    <div class="flex justify-center items-center mt-6">
        <a href="{{ path('app_login') }}"
           class="inline-flex items-center font-bold text-xs text-center">
            <span>{{ 'back' | trans }}</span>
        </a>
    </div>
{% endblock %}
