{% extends 'layout/full.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}
    <h1 class="font-medium self-center text-xl sm:text-2xl text-gray-800 mb-6">Reset your password</h1>

    {{ form_start(requestForm) }}

    <div class="flex flex-col mb-4">
        {{ form_label(requestForm.email, 'email') }}
        {{ form_widget(requestForm.email, {'attr': {'placeholder': 'email'}}) }}
        {{ form_errors(requestForm.email) }}
    </div>
    <div class="mb-4">
        <small>
            Enter your email address and we we will send you a
            link to reset your password.
        </small>
    </div>
    <div class="flex w-full">
        <button type="submit"
                class="flex items-center justify-center w-full">
            <span class="mr-2">Send password reset email</span>
        </button>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}