{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="w-full px-4">
        <div class="p-4 text-gray-900 bg-white rounded-lg shadow-lg flex flex-col text-center">
            <h1 class="mb-4 text-4xl">Bienvenue sur Janji</h1>
            {% if app.user %}
                <p class="mb-4">Pour prendre rendez-vous, cliquez sur le bouton ci-dessus.</p>
                <div class="flex justify-evenly mb-2">
                    <a href="{{ path('appointment') }}" class="btn text-xl">{{ 'to_calendar'|trans }}</a>
                </div>
            {% else %}
                <p class="mb-4">Pour prendre rendez-vous, veuillez vous connecter ou cr√©er un nouveau compte.</p>
                <div class="flex justify-evenly mb-2">
                    <a href="{{ path('app_login') }}" class="btn text-xl">{{ 'to_login'|trans }}</a>
                    <a href="{{ path('app_register') }}" class="btn text-xl">{{ 'to_register'|trans }}</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
